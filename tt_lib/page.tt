      </div>

      <!-- FOOTER -->
      <footer class="site-footer">
        <div class="container py-3">
          <p class="float-end"><a href="#">Back to top</a></p>
          <p>Made by <a href="https://links.davecross.co.uk/">Dave Cross</a> /
          Books photo by <a href="https://unsplash.com/@brett_jordan?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash">Brett Jordan</a> on <a href="https://unsplash.com/photos/books-on-brown-wooden-shelf-GqENJb_wtAw?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash">Unsplash</a></p>
        </div>
      </footer>
    </main>

    <!-- Optional JavaScript; choose one of the two! -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
            crossorigin="anonymous"></script>
    <script src="https://cdn.davecross.co.uk/js/amazon-store/v1/amazon-store.min.js" defer></script>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        AmazonStore.enhanceAll({ tag: 'davblog-21' });

          const chips = [...document.querySelectorAll('.index-toolbar a[href^="#"]')];
          const sections = chips
            .map(a => document.getElementById(a.getAttribute('href').slice(1)))
            .filter(Boolean);

          const onScroll = () => {
            let current = sections[0];
            for (const s of sections) {
              if (s.getBoundingClientRect().top - (window.innerHeight * .25) < 0) current = s;
              else break;
            }
            chips.forEach(a => a.classList.toggle('active', a.getAttribute('href').slice(1) === current.id));
          };

          onScroll();
          document.addEventListener('scroll', onScroll, { passive: true });
      });
    </script>
  </body>
</html>
