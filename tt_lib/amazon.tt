[% MACRO amazon(book, ass_tag) BLOCK -%]
<div class="amazon">
  <a href="https://www.amazon.co.uk/dp/[% book.asin %]/?tag=[% ass_tag %]">
    <img class="img-thumbnail" src="https://images.amazon.com/images/P/[% book.asin %].jpg"
         alt="'[% book.title %]' by [% book.author.name %]">
    <button type="button" class="btn btn-primary">Buy on Amazon</button>
  </a>
</div>
[% END %]
